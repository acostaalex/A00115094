            <div class="comments-list">
                <h3>Comentarios Recientes</h3>
                <?php
                // Configuración de la base de datos
                $servername = "localhost";
                $username = "root";
                $password = "tu_nueva_contrasena"; // Reemplaza con la contraseña que configuraste
                $dbname = "seguridad_vial";
                $port = 3307; // Puerto de MySQL

                // Crear conexión
                $conn = new mysqli($servername, $username, $password, $dbname, $port);
                
                // Verificar la conexión
                if ($conn->connect_error) {
                    die("Conexión fallida: " . $conn->connect_error);
                }
                
                // Consultar los comentarios de la base de datos
                $sql = "SELECT nombre, comentario FROM comentarios ORDER BY id DESC";
                $result = $conn->query($sql);
                
                if ($result->num_rows > 0) {
                    // Mostrar cada comentario
                    while($row = $result->fetch_assoc()) {
                        echo '<div class="comment-item">';
                        echo '<strong>' . htmlspecialchars($row["nombre"]) . '</strong>';
                        echo '<p>' . nl2br(htmlspecialchars($row["comentario"])) . '</p>';
                        echo '</div>';
                    }
                } else {
                    echo "<p>Aún no hay comentarios. ¡Sé el primero en dejar uno!</p>";
                }
                
                $conn->close();
                ?>
            </div>
        </section>

