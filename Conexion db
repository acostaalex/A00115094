<?php
// Configuración de la base de datos
$servername = "localhost";
$username = "root";
$password = "tu_nueva_contrasena"; // Reemplaza con la contraseña que configuraste
$dbname = "seguridad_vial";
$port = 3307; // Puerto de MySQL

// Crear conexión
$conn = new mysqli($servername, $username, $password, $dbname, $port);

// Verificar la conexión
if ($conn->connect_error) {
    die("Conexión fallida: " . $conn->connect_error);
}

// Recibir datos del formulario
$nombre = htmlspecialchars($_POST['nombre']);
$email = htmlspecialchars($_POST['email']);
$comentario = htmlspecialchars($_POST['comentario']);

// Preparar y ejecutar la consulta SQL
$sql = "INSERT INTO comentarios (nombre, email, comentario) VALUES (?, ?, ?)";
$stmt = $conn->prepare($sql);
$stmt->bind_param("sss", $nombre, $email, $comentario);

if ($stmt->execute()) {
    // Redirigir de nuevo a la página principal con un mensaje de éxito
    header("Location: index.php?status=success#comentarios");
    exit();
} else {
    echo "Error: " . $sql . "<br>" . $conn->error;
}

$stmt->close();
$conn->close();
?>
